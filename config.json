{
	"$schema": "https://raw.githubusercontent.com/Bedrock-OSS/regolith-schemas/main/config/v1.4.json",
	"author": "betafied",
	"name": "betafied-addon",
	"packs": {
		"behaviorPack": "./src/behavior",
		"resourcePack": "./src/resource"
	},
	"regolith": {
		"dataPath": "./src/data",
		"filterDefinitions": {
			"pack_anything": {
				"url": "github.com/Nusiq/regolith-filters",
				"version": "1.1.0"
			}
		},
		"formatVersion": "1.4.0",
		"profiles": {
			"default": {
				"export": {
					"build": "standard",
					"readOnly": false,
					"target": "development"
				},
				"filters": []
			},
			"pack": {
				"export": {
					"build": "standard",
					"readOnly": false,
					"target": "development"
				},
				"filters": [
					{
						"filter": "pack_anything",
						"settings": {
							"output": "`f'Betafied-{git_describe}.mcaddon'`",
							"pathmap": {
								"behavior": "behavior_packs/betafied_behavior",
								"resource": "resource_packs/betafied_resource"
							}
						}
					}
				]
			},
			"world": {
				"export": {
					"build": "standard",
					"readOnly": false,
					"target": "development"
				},
				"filters": [
					{
						"filter": "pack_anything",
						"settings": {
							"output": "release.mcworld",
							"pathmap": {
								"behavior": "behavior_packs/0",
								"PROJECT:worlds/release-world": ".",
								"resource": "resource_packs/0"
							}
						}
					}
				]
			}
		}
	}
}