{
	"$schema": "https://raw.githubusercontent.com/Bedrock-OSS/regolith-schemas/main/config/v1.4.json",
	"author": "Betafied Contributors",
	"name": "Betafied",
	"packs": {
	  "behaviorPack": "./packs/BP",
	  "resourcePack": "./packs/RP"
	},
	"regolith": {
	  "dataPath": "./packs/data",
	  "filterDefinitions": {
		"pack_anything": {
		  "url": "github.com/Nusiq/regolith-filters/pack_anything",
		  "version": "latest"
		},
		"bump_manifest": {
		  "url": "github.com/Bedrock-OSS/regolith-filters",
		  "version": "latest"
		}
	  },
	  "formatVersion": "1.4.0",
	  "profiles": {
		"default": {
		  "filters": [],
		  "export": {
			"readOnly": false,
			"target": "development",
			"build": "standard"
		  }
		},
		"world": {
		  "filters": [
			{
			  "filter": "bump_manifest",
			  "settings": {
				"version": "patch"
			  }
			},
			{
			  "filter": "pack_anything",
			  "settings": {
				"output": "release.mcworld",
				"pathmap": {
				  "BP": "behavior_packs/0",
				  "RP": "resource_packs/0",
				  "PROJECT:worlds/release-world": "."
				}
			  }
			}
		  ],
		  "export": {
			"readOnly": false,
			"target": "development",
			"build": "standard"
		  }
		},
		"pack": {
		  "filters": [
			{
			  "filter": "bump_manifest",
			  "settings": {
				"version": "patch"
			  }
			},
			{
			  "filter": "pack_anything",
			  "settings": {
				"output": "`f'Betafied-{git_describe}.mcaddon'`",
				"pathmap": {
				  "BP": "behavior_packs/Betafied_BP",
				  "RP": "resource_packs/Betafied_RP"
				}
			  }
			}
		  ],
		  "export": {
			"readOnly": false,
			"target": "development",
			"build": "standard"
		  }
		}
	  }
	}
  }